{
  "id": "tax.json",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "annualIncome": {
      "type": ["integer", "null"],
      "description": "total income, can be negative, form 1040 line 22",
      "minimum": -Infinity,
      "maximum": Infinity
    },
    "paidPropertyTaxes": {
      "type": ["integer", "null"],
      "description": "personal property taxes, 1040 schA line 7, cents"
    },
    "filingStatus": {
      "type": "string",
      "enum": [
        "single", 
        "married_filing_jointly", 
        "married_filing_separately", 
        "head_of_household", 
        "widow"
      ]
    },
    "contributionIRA": {
      "type": ["integer", "null"],
      "description": "form 1040 line 32"
    },
    "w2": {
      "type": ["array", "null"],
      "items": {"$ref": "w2.json#"},
      "minItems": 0,
      "uniqueItems": false
    },
    "scheduleC": {
      "type": ["array", "null"],
      "items": {"$ref": "scheduleC.json#"},
      "minItems": 0,
      "uniqueItems": false
    },
    "scheduleD": {"$ref": "scheduleD.json#"},
    "scheduleE": {
      "type": ["array", "null"],
      "items": {"$ref": "scheduleE.json#"},
      "minItems": 0,
      "uniqueItems": false
    },
    "scheduleK1": {"$ref": "scheduleK1.json#"},
    "form8949": {
      "type": ["array", "null"],
      "items": {"$ref": "form8949.json#"},
      "minItems": 0,
      "uniqueItems": false
    },
    "form1099INT": {
      "type": ["array", "null"],
      "items": {"$ref": "form1099INT.json#"},
      "minItems": 0,
      "uniqueItems": false
    },
    "form1099DIV": {
      "type": ["array", "null"],
      "items": {"$ref": "form1099DIV.json#"},
      "minItems": 0,
      "uniqueItems": false
    },

    "form1099R": {
      "type": ["array", "null"],
      "items": {
        "type": "object",
        "properties": {
          "ein": {
            "type": "string"
          },
          "payerName": {
            "type": "string"
          },
          "grossDistribution": {
            "type": "integer"
          },
          "distributionType": {
            "type": "string"
          }
        },
        "required": [
          "ein",
          "payerName",
          "grossDistribution",
          "distributionType"
        ]
      }
    },
    "form1098E": {
      "type": ["array", "null"],
      "items": {
        "type": "object",
        "properties": {
          "recipientId": {
            "type": "string"
          },
          "interestReceivedByLender": {
            "type": "integer"
          }
        },
        "required": [
          "recipientId",
          "interestReceivedByLender"
        ]
      }
    }
  },
  "required": [
    "annualIncome",
    "paidPropertyTaxes",
    "filingStatus",
    "contributionIRA",
    "w2",
    "scheduleC",
    "scheduleD",
    "scheduleE",
    "scheduleK1",
    "form8949",
    "form1099R",
    "form1098E",
    "form1099INT",
    "form1099DIV"
  ]
}
